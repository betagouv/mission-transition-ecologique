{
  "extends": [
    "@tsconfig/node18/tsconfig.json"
  ],
  "include": [
    "src/**/*",
  ],
  "compilerOptions": {
    "rootDir": ".",
    "composite": true,
    "declaration": true,
    "baseUrl": ".",
    "isolatedModules": true,
    "resolveJsonModule": true,
    "target": "ESNext",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "preserveValueImports": false,
    "importsNotUsedAsValues": "remove",
    "resolvePackageJsonImports": false,
    "resolvePackageJsonExports": false,
  }
}
