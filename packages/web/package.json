{
  "name": "@tee/web",
  "version": "0.1.0",
  "private": false,
  "author": "Julien Paris (https://multi.coop)",
  "licence": "AGPL-3.0",
  "type": "module",
  "engines": {
    "node": "20.x",
    "npm": ">=10.0 <11"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/betagouv/transition-ecologique-entreprises-widget.git"
  },
  "bugs": {
    "url": "https://github.com/betagouv/transition-ecologique-entreprises-widget/issues"
  },
  "homepage": "https://github.com/betagouv/transition-ecologique-entreprises-widget",
  "scripts": {
    "copy-dsfr-core-css": "cp -a ../../node_modules/@gouvfr/dsfr/dist/core/core.main.min.css ./public/css/core.main.min.css",
    "copy-dsfr-fonts": "cp -a ../../node_modules/@gouvfr/dsfr/dist/fonts/. ./public/fonts",
    "copy-custom-css": "cp -a ./src/assets/custom.css ./public/css/custom.css",
    "update-styles": "npm run copy-dsfr-core-css && npm run copy-dsfr-fonts && npm run copy-custom-css",
    "dev": "npm run copy-custom-css && NODE_OPTIONS='--import tsx' vite --port 4242",
    "build": "npm run update-styles && npm run build-main",
    "build-main": "NODE_OPTIONS='--import tsx' LIB=main vite build",
    "build-widget": "NODE_OPTIONS='--import tsx' LIB=widget vite build",
    "start": "echo 'STARTING FRONT WITH VITE' && npm run start-preview",
    "start-preview": "NODE_OPTIONS='--import tsx' vite preview --port $PORT",
    "preview": "NODE_OPTIONS='--import tsx' vite preview",
    "test:unit": "vitest",
    "test:e2e": "start-server-and-test preview http://localhost:4173 'cypress run --e2e'",
    "test:e2e:dev": "start-server-and-test 'vite dev --port 4173' http://localhost:4173 'cypress open --e2e'",
    "type-check": "vue-tsc --noEmit -p tsconfig.tc.json --composite false",
    "type-check-watch": "vue-tsc --watch --noEmit -p tsconfig.tc.json --composite false",
    "lint": "eslint . --fix",
    "format": "prettier --write src/",
    "sass:watch": "sass --pkg-importer=node --load-path=../../node_modules --watch src/assets/main.scss:src/assets/main.css"
  },
  "dependencies": {
    "@gouvfr/dsfr": "^1.11.2",
    "@gouvminint/vue-dsfr": "^5.11.0",
    "@incubateur-ademe/legal-pages-markdown": "^0.3.0",
    "@sentry/utils": "^7.99.0",
    "@sentry/vue": "^7.93.0",
    "@unhead/vue": "^1.9.11",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vue/tsconfig": "^0.5.1",
    "chart.js": "^4.4.2",
    "fs": "^0.0.1-security",
    "iframe-resizer": "^4.3.9",
    "js-yaml": "^4.1.0",
    "lit": "^2.7.3",
    "path": "^0.12.7",
    "pinia": "^2.0.32",
    "tsx": "^4.7.2",
    "unplugin-auto-import": "^0.17.5",
    "unplugin-vue-components": "^0.26.0",
    "vite": "^5.2.8",
    "vitest": "^1.2.1",
    "vue": "^3.2.47",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.2.0",
    "@types/iframe-resizer": "^3.5.13",
    "@types/js-yaml": "^4.0.5",
    "@types/jsdom": "^21.1.0",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/eslint-config-typescript": "^13.0.0",
    "@vue/test-utils": "^2.3.0",
    "cypress": "^13.6.3",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-vue": "^9.9.0",
    "jsdom": "^24.0.0",
    "npm-run-all": "^4.1.5",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-postcss-lit": "^2.0.0",
    "sass": "^1.74.1",
    "start-server-and-test": "^2.0.0",
    "vite-plugin-eslint": "^1.8.1",
    "vue-tsc": "^2.0.7"
  }
}
