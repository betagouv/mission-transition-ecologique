{
  "name": "@tee/data",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/data/src",
  "projectType": "library",
  "tags": [],
  "// targets": "to see all targets run: nx show project @tee/data --web",
  "targets": {
    "ci": {
      "executor": "nx:noop",
      "dependsOn": [
        "lint",
        "test"
      ]
    },
    "generate-program": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "libs/data",
        "commands": [
          "npx tsx src/generateProgramType.ts",
          "npx tsx src/buildProgramJson.ts"
        ],
        "parallel": false
      }
    },
    "generate-projects": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "libs/data",
        "commands": [
          "npx tsx src/generateProjectsJson.ts"
        ]
      }
    },
    "generate-program-yaml": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "libs/data",
        "commands": [
          "npx tsx src/generateOperatorsJson.ts",
          "npx tsx src/generateProgramYaml.ts"
        ],
        "parallel": false
      }
    }
  }
}
