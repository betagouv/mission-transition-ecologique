{
  "name": "@tee/data",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/data/src",
  "projectType": "library",
  "tags": [],
  "// targets": "to see all targets run: nx show project @tee/data --web",
  "targets": {
    "ci": {
      "executor": "nx:noop",
      "dependsOn": [
        "lint",
        "test"
      ]
    },
    "generate-testimonies": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "libs/data",
        "commands": [
          "npx tsx src/scripts/generateTestimoniesJson.ts"
        ]
      }
    },
    "generate-projects": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "libs/data",
        "commands": [
          "npx tsx src/scripts/generateProjectsJson.ts"
        ]
      }
    },
    "generate-faq": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "libs/data",
        "commands": [
          "npx tsx src/scripts/generateFaqJson.ts"
        ]
      }
    },
    "update-trainings": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "libs/data",
        "commands": [
          "npx tsx src/scripts/updateBaserowTrainings.ts"
        ]
      }
    },
    "generate-programs": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "libs/data",
        "commands": [
          "npx tsx src/scripts/generateProgramYaml.ts",
          "npx tsx src/scripts/generateOperatorsJson.ts",
          "npx tsx src/scripts/generateProgramType.ts",
          "npx tsx src/scripts/buildProgramJson.ts"
        ],
        "parallel": false
      }
    },
    "export-programs": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "libs/data",
        "commands": [
          "npx tsx src/scripts/dataGouvExport.ts"
        ]
      }
    },
    "generate-programs-json": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "libs/data",
        "commands": [
          "npx tsx src/scripts/buildProgramJson.ts"
        ]
      }
    },

    "send-program-mails": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "libs/data",
        "commands": [
          "npx tsx src/scripts/sendMailToProgramContacts.ts"
        ]
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "libs/data",
        "command": "npx vitest run"
      }
    }
  }
}
