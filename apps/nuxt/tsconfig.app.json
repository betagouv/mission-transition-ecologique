{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "types": ["./src/env.d.ts"],
    "resolveJsonModule": true
  },
  "include": [".nuxt/nuxt.d.ts", "src/**/*", "./**/*"],
  "exclude": [
    "vite.config.ts",
    "vite.config.mts",
    "vitest.config.ts",
    "vitest.config.mts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.tsx",
    "src/**/*.test.js",
    "src/**/*.spec.js",
    "src/**/*.test.jsx",
    "src/**/*.spec.jsx",
    "src/public/**/*.js",
    "scripts/**/*"
  ]
}
